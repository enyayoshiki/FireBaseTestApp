<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/oneResult_chatRooms_rootView">

    <CheckBox
        android:id="@+id/check_oneResult_addFriend_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="@id/done_oneResult_addFriend_textView"
        app:layout_constraintEnd_toEndOf="@id/done_oneResult_addFriend_textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/done_oneResult_addFriend_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done_addfriend"
        android:textSize="10sp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/userImage_oneResult_addFriend_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SmallSp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage_oneResult_addFriend_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/done_oneResult_addFriend_textView"/>

    <TextView
        android:id="@+id/userName_oneResult_addFriend_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:text="@string/success"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/userImage_oneResult_addFriend_imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>