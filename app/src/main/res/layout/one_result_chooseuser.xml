<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView_Home"
    android:background="#CCE8F8D8">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chooseUserImage_ImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/chooseUserName_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/chooseUserImage_ImageView"
        app:layout_constraintTop_toTopOf="@id/chooseUserImage_ImageView"
        app:layout_constraintBottom_toBottomOf="@id/chooseUserImage_ImageView"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#040303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>