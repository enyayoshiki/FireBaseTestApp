<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Thread_ChatRooms_MyPage.ChatRoom.MenuFragment.MenuFragment_InChatRoom">

    <TextView
        android:id="@+id/userName_menuFragment_textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/passchange_text"
        android:textColor="@color/black_80"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menuFragment_tabLayout"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/menuFragment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/menuFragment_tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


    </androidx.viewpager.widget.ViewPager>



    <com.google.android.material.tabs.TabLayout
        android:id="@+id/menuFragment_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#679C2F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userName_menuFragment_textView"
        app:layout_constraintBottom_toTopOf="@id/menuFragment_recyclerView"
        />


</androidx.constraintlayout.widget.ConstraintLayout>