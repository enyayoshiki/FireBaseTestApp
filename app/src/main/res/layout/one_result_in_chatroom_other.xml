<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/oneResult_otherImage_inChatRoom_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/oneResult_otherMessage_inChatRoom_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:padding="4dp"
        android:text="@string/logout_text"
        android:textSize="12sp"
        android:background="@drawable/rounded_message"
        android:textColor="#353535"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/oneResult_otherName_inChatRoom_textView"
        app:layout_constraintStart_toEndOf="@id/oneResult_otherImage_inChatRoom_imageView" />

    <TextView
        android:id="@+id/oneResult_otherName_inChatRoom_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="#000407"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/oneResult_otherImage_inChatRoom_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oneResult_otherCreatedAt_inChatRoom_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7sp"
        android:textColor="#FDFDFD"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toEndOf="@id/oneResult_otherName_inChatRoom_textView"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>