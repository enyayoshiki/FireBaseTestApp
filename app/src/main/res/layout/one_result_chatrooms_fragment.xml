<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:id="@+id/oneResult_chatRooms_rootView">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image_oneResult_chatRooms_imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/user_name_oneResult_chatRooms_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:text="@string/success"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/user_image_oneResult_chatRooms_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/latestMessage_oneResult_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:text="@string/hint_mailadress_resistered"
        app:layout_constraintStart_toEndOf="@id/user_image_oneResult_chatRooms_imageView"
        app:layout_constraintTop_toBottomOf="@id/user_name_oneResult_chatRooms_textView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#040303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>