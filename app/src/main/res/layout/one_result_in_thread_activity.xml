<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/oneResult_inThread_rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/oneResult_userImage_inThread_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/oneResult_userName_inThread_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#000407"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/oneResult_userImage_inThread_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oneResult_createdAt_inThread_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="#6E6E6E"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/oneResult_userName_inThread_textView"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/oneResult_message_inThread_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="30"
        android:padding="4dp"
        android:layout_marginTop="5dp"
        android:textSize="11sp"
        android:gravity="start"
        android:background="@drawable/rounded_message"
        android:textColor="#121111"
        app:layout_constraintStart_toStartOf="@id/oneResult_userName_inThread_textView"
        app:layout_constraintTop_toBottomOf="@id/oneResult_userName_inThread_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>